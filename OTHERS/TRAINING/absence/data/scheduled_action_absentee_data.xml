<?xml version="1.0"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_scheduler_absentee_update" model="ir.cron">
            <field name="name">Absentee Update</field>
            <field name="model_id" ref="model_daily_absence"/>
            <field name="state">code</field>
            <field name="code">model.cron_update_absence()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 12:00:00')"/>
            <field name="interval_type">days</field>
<!--            <field name="interval_number">1</field>-->
            <field name="numbercall">-1</field>
        </record>
    </data>
</odoo>