<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
<!-- custom template for adding new field in receipt and product view in pos -->
    <t t-name="OrderLinesReceipt" t-inherit="point_of_sale.OrderLinesReceipt" t-inherit-mode="extension" owl="1">
<!--    inherits orderline in receipt and adding new value spanish_name added from js    -->
        <xpath expr="//t[@t-foreach='receipt.orderlines']" position="inside">
            <t t-if="line.spanish_name">
                [<t t-esc="line.spanish_name" />]
            </t>
       </xpath>
    </t>
    <t t-name="ProductItem" t-inherit="point_of_sale.ProductItem" t-inherit-mode="extension" owl="1">
<!--   inherits product view in pos to add new value spanish name     -->
        <xpath expr="//t[@t-esc='props.product.display_name']" position="after">
            <t t-if="props.product.spanish_name">
                <br/>
                [<t t-esc="props.product.spanish_name" />]
            </t>
       </xpath>
    </t>

</templates>