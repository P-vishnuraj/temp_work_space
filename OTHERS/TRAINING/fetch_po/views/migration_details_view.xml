<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--  Tree view for Migration details   -->
    <record id="migration_details_view_tree" model="ir.ui.view">
        <field name="name">migration.details.view.tree</field>
        <field name="model">migration.details</field>
        <field name="arch" type="xml">
            <tree string="Details">
                <field name="data"/>
                <field name="database_from"/>
                <field name="database_to"/>
                <field name="count"/>
                <field name="user"/>
                <field name="date"/>
            </tree>
        </field>
    </record>
<!--  Action for migration details  -->
    <record id="action_migration_details" model="ir.actions.act_window">
        <field name="name">Migration History</field>
        <field name="res_model">migration.details</field>
        <field name="view_mode">tree</field>
        <field name="target">current</field>
    </record>
</odoo>
