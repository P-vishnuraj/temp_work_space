<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="student_marksheet_form" model="ir.ui.view">
<!--            Reporting wizard form-->
            <field name="name">student.marksheet</field>
            <field name="model">student.marksheet</field>
            <field name="arch" type="xml">
                <form string="File">
                    <group>
                        <field name="radio" widget="radio"/>
                        <field name="student_id" attrs="{'invisible': [('radio', '!=', 'student')]}" widget='selection'/>
                        <field name="class_id" attrs="{'invisible': [('radio', '!=', 'class')]}" widget='selection'/>
                        <field name="semester_id" widget='selection'/>
                        <field name="exam_id" widget='selection'/>
                    </group>
                </form>
                <footer>
                    <button name="action_print_report" string="print pdf" type="object" class="btn-primary"/>
                    <button name="action_print_excel_report" string="print excel" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </field>
        </record>
    </data>

<!--        Student mark_sheet Action    -->
    <record id="action_student_marksheet" model="ir.actions.act_window">
        <field name="name">Mark Sheet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student.marksheet</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="student_marksheet_form"/>
        <field name="target">new</field>
    </record>

</odoo>