<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--    record for adding new page contact relation to survey form    -->
    <record id="survey_survey_view_form" model="ir.ui.view">
        <field name="name">survey.survey.view.inherit.contact_from_survey</field>
        <field name="model">survey.survey</field>
        <field name="inherit_id" ref="survey.survey_survey_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='questions']"
                   position="after">
                <page string="Contact Relation" name="contact">
                    <field name="contact_relation_ids">
                        <tree editable="bottom" >
                            <field name="survey_contact_id" invisible="1"/>
                            <field name="sequence" widget="handle"/>
                            <field name="question_id" options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="contact_field"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>