<?xml version="1.0"?>
<odoo>

    <!--  LIST view of material.request -->
    <record id="material_request_list_view" model="ir.ui.view">
        <field name="name">material.request.list</field>
        <field name="model">material.request</field>
        <field name="arch" type="xml">
            <tree string="Material Request">
                <field name="reference_no"/>
            </tree>
        </field>
    </record>

    <!-- FORM view of material.request -->
    <record id="material_request_form_view" model="ir.ui.view">
        <field name="name">material.request.form</field>
        <field name="model">material.request</field>
        <field name="arch" type="xml">
            <form string="Material Request">
                <header>
                    <field name="state" widget="statusbar"/>

                    <button name="action_confirm_request" string="confirm" type="object"
                            groups="material_request.material_user" class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>

                    <button name="action_sent_request" string="sent" type="object"
                            groups="material_request.material_user" attrs="{'invisible': [('state', '!=', 'confirm')]}"
                            class="oe_highlight"/>

                    <button name="action_approve_request" string="approve" type="object"
                            groups="material_request.material_manager" attrs="{'invisible': [('state', '!=', 'sent')]}"
                            class="oe_highlight"/>

                    <button name="action_sanction_request" string="sanction" type="object"
                            groups="material_request.material_dept_head"
                            attrs="{'invisible': [('state', '!=', 'approved')]}" class="oe_highlight"/>

                    <button name="action_reject_request" string="reject" type="object"
                            groups="material_request.material_dept_head"
                            attrs="{'invisible': [('state', '!=', 'approved')]}" class="oe_highlight"/>

                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" attrs="{'invisible': [('state', '!=', 'done')]}">
                        <button name="action_rfq_smart"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-address-card">
                            <field name="rfq_count" widget="statinfo" string="RFQs"/>
                        </button>
                        <button name="action_transfer_smart"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-address-card">
                            <field name="transfer_count" widget="statinfo" string="Transfers"/>
                        </button>

                    </div>

                    <group>
                        <h1>
                            <field name="reference_no"/>
                        </h1>
                    </group>
                    <group>
                        <group>
                            <field name="user_name_id"/>
                        </group>
                        <group>
                            <field name="request_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Material">
                            <field name="material_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="is_po" widget="boolean_toggle"/>
                                    <field name="transfer_from_id"/>
                                    <field name="transfer_to_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <!--    Material.request Action    -->
    <record id="material_request_action" model="ir.actions.act_window">
        <field name="name">Material Request</field>
        <field name="res_model">material.request</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>