<?xml version="1.0"?>
<odoo>
    <data>
        <record id="ir_cron_scheduler_daily_attendance" model="ir.cron">
            <!--      cron job for create daily absence report and mail to managers      -->
            <field name="name">Daily absence</field>
            <field name="model_id" ref="model_daily_absence"/>
            <field name="state">code</field>
            <field name="code">model.cron_update_daily_absence()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 12:00:00')"/>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>
    </data>
</odoo>